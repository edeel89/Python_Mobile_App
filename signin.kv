<SigninWindow>:
    id: main_win
    MDScreen:
        name: "MainScreen"
        #canvas.before:
            #Color:
                #rgba: 1, 1, 1, 1
            #Rectangle:
                #pos: self.pos
                #size: self.size
        Image:
            source: 'loginbg2.jpg'

        MDCard:
            size_hint: None, None
            size: "230dp", "270dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 25
            padding: 25
            spacing: 5
            orientation: 'vertical' 
            border_radius: 40   
            radius: [30] 
            BoxLayout:
                orientation:'vertical'
                spacing: 10

                MDLabel:
                    id: welcome_label
                    text: "Welcome"
                    font_size: 37
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 5
                
                MDTextField:
                    id: username
                    hint_text: "username"
                    icon_right: "account"
                    size_hint_x: None
                    width: 300
                    font_size: 30
                    pos_hint: {"center_x": 0.5}
                    mode: 'rectangle'
                    
                    
                MDTextField:
                    id: pwd
                    hint_text: "password"
                    icon_right: "key"
                    size_hint_x: None
                    width: 300
                    font_size: 30
                    pos_hint: {"center_x": 0.5}
                    mode: 'rectangle'
                    
                    
                Widget:
                    size_hint_y: None
                    height: 15
                    
                Button:
                    text: "LOGIN"
                    #font_size: 25
                    on_release: root.ChngScreen()
                    height: 55
                    size_hint_y: 0.3
                    size_hint_x: 0.5
                    pos_hint: {"center_x": 0.5}
                    background_normal: ''
                    background_color: (0, 0, 0, 1)
                
                Button:
                    text: "SIGNUP"
                    pos_hint: {"center_x": 0.5}
                    bg_color: 0, 0, 0, 0
                    height: 55
                    size_hint_y: 0.3
                    size_hint_x: 0.5
                    background_normal: ''
                    background_color: (0, 0, 0, 1)

                Widget:
                    size_hint_y: None
                    height: 10

